{% extends 'admin/aside.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <meta name="copyright" content="Aphrotdite,INC, https://Aphrotdite.com/">

  <title>Aphrotdite - votre grossesse notre engagement</title>

  <link rel="stylesheet" href="{{ asset('../assets/css/maicons.css') }}">

  <link rel="stylesheet" href="{{ asset('../assets/css/bootstrap.css') }}">

  <link rel="stylesheet" href="{{ asset('../assets/vendor/owl-carousel/css/owl.carousel.css') }}">

  <link rel="stylesheet" href="{{ asset('../assets/vendor/animate/animate.css') }}">

  <link rel="stylesheet" href="{{ asset('../assets/css/theme.css') }}">
</head>
    <h1>Comment index</h1>
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success alert-dismissible fade show">
                        {% for message in app.flashes('success') %}
                            {{ message|trans }}
                        {% endfor %}

                    </div>
                    <script>
                    //5 sec bech thidde
                        document.addEventListener("DOMContentLoaded", function() {
                            const alert = document.querySelector('.alert');
                            alert.classList.add('show');
                            setTimeout(function() {
                                alert.classList.remove('show');
                            }, 5000);
                        });
                    </script>
                {% endif %}
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th>Id Comment</th>
                <th>Content</th>
                <th>PublishedAt</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.publishedAt ? comment.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_app_comment_show', {'id': comment.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}</a>
                        {# <a href="{{ path('admin_app_comment_edit', {'id': comment.id}) }}"class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}</a> #}
                       {{ include('admin/comment/_delete_form.html.twig') }}

                    </div>
                </td>
                                <td class="text-right">

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="section actions">
        <a href="{{ path('app_comment_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.publish_comment'|trans }}
        </a>
    </div>
     {# <a href="{{ path('admin_app_comment_new') }}">Create new</a> #}
{% endblock %}
