    {% extends 'admin/aside.html.twig' %}

    
    {% block body %}           
            <div class="row">
                
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">

                            </div>

                            <h1> Produit</h1>
                            {{ form_start(form,{attr:{'novalidate':'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom, 'Nom') }}
